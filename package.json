{
  "name": "tidify",
  "author": "@kenichsberg",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "TZ=UTC jest",
    "test-all": "TZ=UTC npm run lint && npm run type-check && npm run test",
    "css:dev": "TAILWIND_MODE=watch postcss ./styles/tailwind.css -o ./styles/globals.css --watch",
    "css:build": "postcss ./styles/tailwind.css -o ./styles/globals.css"
  },
  "//": {
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged",
        "pre-push": "npm run type-check"
      }
    },
    "lint-staged": {
      "*.@(ts|tsx)": [
        "npm run lint",
        "npm run format"
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "next": "^12.0.3",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.3.1",
    "preact": "^10.7.1",
    "react": "^17.0.2",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-hook-form": "^7.19.5",
    "swr": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hookform/devtools": "^4.0.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "prisma": "^3.4.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.4.4"
  }
}
